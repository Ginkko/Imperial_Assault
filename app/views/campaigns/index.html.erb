<h1>Campaigns</h1>

<% if @campaigns.any? %>
  <% @campaigns.each do |campaign| %>
    <li>
      <%= link_to campaign.name, campaign_path(campaign) %>
    </li>
  <% end %>
<% else %>
  <h3>There are no current campaigns</h3>
<% end %>
<hr>
<%= link_to 'Start New Campaign', new_campaign_path, class: 'btn btn-block btn-primary' %>
